pipeline {
    agent any
    
    environment {
        AWS_DEFAULT_REGION = 'us-east-1' // Update with your desired AWS region
    }

    stages {
        stage('Publish to ECR') {
            steps {
                script {
                    // Retrieve ECR login password using AWS SDK for Python (Boto3)
                    def pythonScript = """
                        import boto3
                        
                        client = boto3.client('ecr')
                        token = client.get_authorization_token()
                        print(token['authorizationData'][0]['authorizationToken'])
                    """
                    def ecrLogin = sh(script: "python -c '${pythonScript}'", returnStdout: true).trim()
                    
                    // Login to ECR
                    sh "echo ${ecrLogin} | base64 -d | docker login -u AWS --password-stdin ${env.AWS_ACCOUNT_ID}.dkr.ecr.${env.AWS_DEFAULT_REGION}.amazonaws.com"
                    
                    // Build and push Docker image
                    sh 'docker build -t my-ecr .'
                    sh 'docker tag my-ecr:latest ${env.AWS_ACCOUNT_ID}.dkr.ecr.${env.AWS_DEFAULT_REGION}.amazonaws.com/my-ecr:"$BUILD_ID"'
                    sh 'docker push ${env.AWS_ACCOUNT_ID}.dkr.ecr.${env.AWS_DEFAULT_REGION}.amazonaws.com/my-ecr:"$BUILD_ID"'
                }
            }
        }
    }
}
